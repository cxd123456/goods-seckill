<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- mybatis-generator:generate -->
<generatorConfiguration>
    <context id="spring-boot-mybatis-generator"  targetRuntime="MyBatis3">
    	<!-- plugin -->
    	<plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" 
        				connectionURL="jdbc:mysql://192.168.25.201:3306/miaosha" 
        				userId="root" 
        				password="root9918">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成模型的包名和位置-->
        <javaModelGenerator targetPackage="com.miaosha.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="mapping" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.miaosha.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <!-- 要生成的表 tableName是数据库中的表名或视图名 domainObjectName是实体类名-->
        <table tableName="goods" domainObjectName="GoodsEntity" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
        	<property name="useActualColumnNames" value="true" />
        	<generatedKey column="id" sqlStatement="MySql" identity="true" /> 
        </table>
        <table tableName="miaosha_goods" domainObjectName="MiaoshaGoodsEntity" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
        	<property name="useActualColumnNames" value="true" />
        	<generatedKey column="id" sqlStatement="MySql" identity="true" /> 
        </table>
        <table tableName="miaosha_order" domainObjectName="MiaoshaOrderEntity" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
        	<property name="useActualColumnNames" value="true" />
        	<generatedKey column="id" sqlStatement="MySql" identity="true" /> 
        </table>
        <table tableName="order_info" domainObjectName="OrderInfoEntity" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
        	<property name="useActualColumnNames" value="true" />
        	<generatedKey column="id" sqlStatement="MySql" identity="true" /> 
        </table>
    </context>
</generatorConfiguration>